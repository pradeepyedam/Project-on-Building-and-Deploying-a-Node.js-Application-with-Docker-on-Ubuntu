pipeline {
    agent { label 'project' }
    
    stages{
        stage('Checkout'){
            steps{
                git url: 'https://github.com/pradeepyedam/Project-on-Building-and-Deploying-a-Node.js-Application-with-Docker-on-Ubuntu.git', branch: 'master'
            }
        }
        stage('Build'){
            steps{
                sh 'sudo docker build . -t pradeepyedam/nodo-todo-app-test:latest'
            }
        }
        stage('Test image') {
            steps {
                echo 'testing...'
                sh 'sudo docker inspect --type=image pradeepyedam/nodo-todo-app-test:latest '
            }
        }
        
        stage('Push'){
            steps{
        	     sh "sudo docker login -u pradeepyedam -p dckr_pat_zsdhCTpRamtR-sPVHIk2PT1k2YE"
                 sh 'sudo docker push pradeepyedam/nodo-todo-app-test:latest'
            }
        }  
        stage('Deploy'){
            steps{
                echo 'deploying on another server'
                sh 'sudo docker stop nodetodoapp || true'
                sh 'sudo docker rm nodetodoapp || true'
                sh 'sudo docker run -d --name nodetodoapp pradeepyedam/nodo-todo-app-test:latest'
                sh '''
                ssh -i Ubuntudemo.pem -o StrictHostKeyChecking=no ubuntu@172.31.38.142 <<EOF
                sudo docker login -u pradeepyedam -p dckr_pat_zsdhCTpRamtR-sPVHIk2PT1k2YE
                sudo docker pull pradeepyedam/nodo-todo-app-test:latest
                sudo docker stop nodetodoapp || true
                sudo docker rm nodetodoapp || true 
                sudo docker run -d --name nodetodoapp pradeepyedam/nodo-todo-app-test:latest
                '''
            }
        }
    }
}
